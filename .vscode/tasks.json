	"version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\windows\\System32\\cmd.exe",
                "args": [ "/C" ]
            }
        }
    },
	"tasks": [
		{
			"label": "CMake Build",
			"type": "shell",
			"command": "cmake -S . -B build && cmake --build build",
			"group": "build",
		}
	]
}